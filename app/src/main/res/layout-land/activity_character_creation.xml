<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000">

    <Button
        android:id="@+id/buttonBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/greenbutton_small"
        android:text="Body"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:onClick="changeBody"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonOk"
        android:layout_alignEnd="@+id/buttonOk" />

    <Button
        android:id="@+id/buttonHorn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Horn"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonBody"
        android:layout_alignParentLeft="true"
        android:onClick="changeHorns"
        android:background="@drawable/greenbutton_small" />

    <Button
        android:id="@+id/buttonEyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/greenbutton_small"
        android:text="Eyes"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_below="@+id/buttonHorn"
        android:layout_alignParentLeft="true"
        android:onClick="changeEyes"/>

    <Button
        android:id="@+id/buttonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/greenbutton_small"
        android:text="Name"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_below="@+id/buttonEyes"
        android:layout_alignParentLeft="true"
        android:onClick="changeName" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOk"
        android:src="@drawable/okbutton"
        android:background="@android:color/transparent"
        android:onClick = "toMain"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonName"
        android:layout_alignEnd="@+id/buttonName" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWhite"
        android:src="@drawable/colorsmallest"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:onClick="selectWhite"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRed"
        android:src="@drawable/colorsmallest"
        android:background="@android:color/transparent"
        android:tint="#c50909"
        android:tintMode="multiply"
        android:layout_below="@+id/buttonWhite"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="selectRed"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGreen"
        android:src="@drawable/colorsmallest"
        android:background="@android:color/transparent"
        android:tint="#06e420"
        android:tintMode="multiply"
        android:layout_below="@+id/buttonRed"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="selectGreen"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonYellow"
        android:src="@drawable/colorsmallest"
        android:background="@android:color/transparent"
        android:tint="#ffea00"
        android:tintMode="multiply"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonWhite"
        android:layout_toStartOf="@+id/buttonWhite"
        android:onClick="selectYellow"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAqua"
        android:src="@drawable/colorsmallest"
        android:background="@android:color/transparent"
        android:tint="#00ffee"
        android:tintMode="multiply"
        android:layout_below="@+id/buttonYellow"
        android:layout_alignLeft="@+id/buttonYellow"
        android:layout_alignStart="@+id/buttonYellow"
        android:onClick="selectAqua"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBlue"
        android:src="@drawable/colorsmallest"
        android:background="@android:color/transparent"
        android:tint="#0a16fb"
        android:tintMode="multiply"
        android:layout_alignBottom="@+id/buttonGreen"
        android:layout_alignLeft="@+id/buttonAqua"
        android:layout_alignStart="@+id/buttonAqua"
        android:onClick="selectBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:background="@drawable/nameplate"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="25sp"
        android:typeface="serif"
        android:layout_alignBottom="@+id/buttonBlue"
        android:layout_toLeftOf="@+id/buttonBlue"
        android:layout_toStartOf="@+id/buttonBlue"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

</RelativeLayout>