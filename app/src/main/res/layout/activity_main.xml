<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.merinoe.projectui.MainActivity"
        android:background="#000000"
        android:backgroundTint="#010603">

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/greenbutton"
            android:text="Play Game"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_gravity="center"
            android:onClick="toPlay"
            android:layout_below="@+id/buttonMakeChar"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/buttonMakeChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/greenbutton"
            android:text="Make Character"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_gravity="center"
            android:onClick="toMakeChar"
            android:gravity="center"
            android:layout_below="@+id/logo"
            android:layout_alignLeft="@+id/buttonPlay"
            android:layout_alignStart="@+id/buttonPlay" />

    <Button
            android:id="@+id/buttonMultiplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/greenbutton"
            android:text="Multiplayer"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="monospace"
        android:layout_gravity="center"
            android:onClick="toMulti"
        android:layout_below="@+id/buttonTrack"
        android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/demonsquaremed"
            android:layout_centerHorizontal="true"
            />

    <Button
        android:id="@+id/buttonTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/greenbutton"
        android:text="Create Track"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_gravity="center"
        android:onClick="toCreateTrack"
        android:layout_below="@+id/buttonPlay"
        android:layout_alignLeft="@+id/buttonPlay"
        android:layout_alignStart="@+id/buttonPlay" /><![CDATA[






    />


]]>
    </RelativeLayout>
